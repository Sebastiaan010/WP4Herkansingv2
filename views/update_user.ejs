        </div>

        <!-- add user form -->
         <!-- form handling -->
 <form method="POST" id="update_user">
    <div class="new_user">
        <div class="form-group">
            <label for="gender" class="text-light">Juiste antwoord</label>
            <div class="radio inline">
                <input type="radio" id="radio-4" name="status" value="Antwoord A" <%= user.status == 'Antwoord A' ? 'checked' : '' %> >
                <label for="radio-4" class="radio-label">Antwoord A</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-5" name="status" value="Antwoord B" <%= user.status == 'Antwoord B' ? 'checked' : '' %> >
                <label for="radio-5" class="radio-label">Antwoord B</label>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Opslaan</button>
        </div>

    </div>
</form>
       
    </div>
